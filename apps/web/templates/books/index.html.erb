<h2>All books</h2>

<% if books.any? %>
  <ul>
    <% books.each do |book| %>
      <li class="book">
        <p><%= book.author %>: <em><%= book.title %></em></p>
      </li>
    <% end %>
  </ul>

  <hr />

  <%= pagy_nav(pagy_data) %>
  <%= pagy_info(pagy_data) %>
<% else %>
  <p class="placeholder">There are no books yet.</p>
<% end %>
